# Use slim Python base then install Node via NodeSource
FROM python:3.11-slim

ENV DEBIAN_FRONTEND=noninteractive
# install OS packages & Node.js 18 LTS
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl ca-certificates gnupg2 build-essential \
  && curl -fsSL https://deb.nodesource.com/setup_18.x | bash - \
  && apt-get install -y --no-install-recommends nodejs \
  && npm --version && node --version \
  && apt-get clean && rm -rf /var/lib/apt/lists/*

# Copy app and install python deps
WORKDIR /app
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy source
COPY . .

# Set non-root user (optional but recommended)
RUN useradd --create-home appuser && chown -R appuser /app
USER appuser

EXPOSE 8000
# Example launch (change to how you run uvicorn/gunicorn)
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
